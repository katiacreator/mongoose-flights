<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/new.css" />
<title><%= title %></title>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="main-container">
    <section class="form-container">
      <div class="form-group">
        <h1>Enter a New Flight</h1>
      </div>
      <form action="/flights" method="POST">
        <div class="form-group">
          <label>Airline:
          <select class="form-control" name="airline">
            <option value="AMERICAN">AMERICAN</option>
            <option value="SOUTHWEST">SOUTHWEST</option>
            <option value="UNITED">UNITED</option>
          </select></label>
        </div>
        <div class="form-group">
          <label>Airport:
          <select class="form-control" name="airport">
            <option value="AUS">AUS</option>
            <option value="DEN" selected>DEN</option>
            <option value="DFW">DFW</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
          </select></label>
        </div>
        <div class="form-group">
          <label>FlightNo:<input type="number" name="flightNo" class="form-control" min="10" max="9999" required >
          </label>
        </div>
        <div class="form-group">
          <label>Departures:
            <input
            type="datetime-local"
            name="departs"
            value="<%= departsDate %>"/>
          </label>
        </div>
          <button type="submit" class="btn btn-primary">Add Flight</button>
      </form>
    </section>
  </main>
</body>
</html>
