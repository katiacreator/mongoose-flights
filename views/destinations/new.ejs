<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/new.css" />
<title><%= title %></title>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="main-container">
    <h1><%= title %></h1>
    <form action="/destinations/new" method="POST">
      <label for="content-textarea">New Destination:</label>
      <textarea name="content" id="content-textarea"></textarea>
      <label for="current-destination-select">Current Destination:</label>
      <select name="destinationId">
          <%- destinations.forEach(destination => {
          `<option value="${destinationId}">${destination}</option>`
          }) %>
      </select>
      <button type="submit">Add to Destinations</button>
      </form>
  </main>
</body>
</html>