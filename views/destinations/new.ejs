<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/new.css" />
<title><%= title %></title>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="main-container">
    <section class="form-container">
      <h1>Enter a Destination Airport</h1>
      <h4>Check airport list dropdown menu before creating a new destination.</h4>
      <form action="/destinations" method="POST">
        <label>Destination:
        </label>
        <input type="text" name="airport" id="airport-input">
        <button class="btn btn-primary" type="submit">Add Destination</button>
      </form>
      <br>
      <h3>List of Destinations:</h3>
      <% if(destinations.length){ %>
        <ul>
          <% destinations.forEach(destination=>{ %>
            <li><%= destination.airport %> </li>
          <% }) %> 
        </ul>
      <% } else { %>
        <p>No Destinations</p>
      <% } %> 
    </section>
  </main>
</body>
</html>